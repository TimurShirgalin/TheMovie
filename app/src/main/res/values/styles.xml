<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titleTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">@dimen/margin_textView_genre</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="descriptionMovieTextView" parent="titleTextView">
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="counterMaxLength">20</item>
        <item name="android:hint">"Поиск"</item>
        <item name="endIconMode">custom</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
    </style>
</resources>